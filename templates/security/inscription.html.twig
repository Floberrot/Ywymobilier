{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

    <div class="container text-center">


        <br>
       <img class="logo-home" src="/images/logo_noir.png" alt="Logo de YWYmobilier">
        <p class="text-center">YWYmobilier permet aux étudiants de chercher simplement et rapidement un logement.
            On conseil aux étudiants d'appeller les propriétaires plutôt que de laisser de simple mail, on compte sur vous!
            De plus, si vous vous inscrivez en tant que propriétaire, vous aurez accès à l'administration de vos biens immobiliers. </p>
        <br>

        {{ form_start(form) }}
            <div id="form_connexion" class="container col-md-6">
                <h1 class="title-base text-center inscription">Inscription</h1>
                <div class="col-md text_form input-inscription">{{ form_label(form.username, 'Nom d\'utilisateur') }}{{ form_widget(form.username) }}</div>
                <br>
                <div class="col-md text_form input-inscription">{{ form_label(form.email, 'Adresse mail ') }}{{ form_widget(form.email) }}</div>
                <br>
                <div class="col-md text_form input-inscription">{{ form_label(form.first_name, 'Prénom : ') }}{{ form_widget(form.first_name) }}</div>
                <br>
                <div class="col-md text_form input-inscription">{{ form_label(form.last_name, 'Nom : ') }}{{ form_widget(form.last_name) }}</div>
                <br>
                <div class="col-md text_form input-inscription">{{ form_label(form.num, 'Numéro de téléphone : ') }}{{ form_widget(form.num) }}</div>
                <br>
                <div class="col-md text_form input-inscription">{{ form_widget(form.password) }}</div>
                <br>
                <div class="col-md text_form input-inscription">{{ form_label(form.roles, 'Vous êtes : ') }}{{ form_widget(form.roles) }}</div>
                <br>


                <button id="log" class="btn ">{{ button|default('S\'inscrire') }}</button>
            </div>



            {{ form_end(form) }}


    </div>


{% endblock %}