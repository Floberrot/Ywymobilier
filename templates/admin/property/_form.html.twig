{% for picture in property.pictures %}
    <div class="col" style="width: 150px; margin:5px">
        <img src="{{ vich_uploader_asset(picture, 'imageFile') }}" width="100">
        <form method="post" action="{{ path('admin.picture.delete', {id: picture.id}) }}" style="display: inline-block" onsubmit="return confirm('êtes-vous sûr ?')">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ picture.id) }}">
            <button class="btn btn-danger">Supprimer</button>
        </form>
    </div>
{% endfor %}