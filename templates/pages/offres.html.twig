{% extends 'base.html.twig' %}

{% block title %}Nos offres!{% endblock %}

{% block body %}
    <div id="app">
        <h1 class="title-base">Voici les appartements disponibles</h1>
        <input v-model="searchText" class="form-control mr-sm-5" type=" search" placeholder="Rechercher l'appartement de vos rêves"
               aria-label="">
        <br>

        <div {# v-for="property in filteredProperty"#} class="card ">
            {% for property in properties %}

            <div class="card mb-4">

                {% for picture in property.pictures %}
                        {% if property.pictures %}
                            <img src="{{ vich_uploader_asset(picture, 'imageFile')}}" alt="card-img-top" style="width: 150px;">
                        {% else %}
                            <img src="{{ '/images/empty.jpg' }}" alt="card-img-top" style="width: 150px; ">
                        {% endif %}
                    {% endfor %}
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/offres/{{ property.slug }}.{{ property.id}}">
                            {{ property.title }}
                        </a></h5>
                    <p class="card-text"><b>{{ property.price }}€</b></p>
                    <small class="text-muted">{{ property.city }} ({{ property.cp }})</small>
            </div>
        </div>
            {% endfor %}

        </div>



    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.js"></script>


{% endblock %}