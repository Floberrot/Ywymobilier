{% extends 'base.html.twig' %}

{% block title %}Nos offres!{% endblock %}

{% block body %}
    <div id="app">
        <h1 class="title-base marginTop40">Voici les appartements disponibles</h1>
        {# Vue créer pas mal de bug dont l'affchage des offres qui disarait des fois.#}


{#                <input v-model="searchText" class="form-control mr-sm-5" type="search"#}
{#                       placeholder="Rechercher l'appartement de vos rêves"#}
{#                       aria-label="">#}
{#                <br>#}

{#    <div v-for="property in filteredProperty">#}

        <div class="row">
            {% for property in properties %}
                <div class="col-sm-4">
                    <a href="/offres/{{ property.slug }}.{{ property.id }}">
                        <div class="card mb-3">
                            {% if property.firstPicture %}
                                    <img src="{{ vich_uploader_asset(property.firstPicture, 'imageFile') }}" alt="card-img-top">
                            {% endif %}
{#                                    <img src="/images/empty.jpg" alt="card-img-top">#}

                            <div class="card-body">
                                <h5 class="card-title">
                                    {{ property.title }}
                                </h5>
                                <p class="card-text"><b>{{ property.price }}€</b></p>
                                <small class="text-muted">{{ property.city }} ({{ property.cp }})</small>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.js"></script>


{% endblock %}