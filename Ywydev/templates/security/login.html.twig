{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
              integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
              crossorigin="anonymous">
    </head>
    <style>
        body {
            background: white;
        }


    </style>

    <!--#region Connexion User !  -->

    <div id="connexion" class="card bg-dark">
        <article id="article_connexion" class="card-body mx-auto">
            <h1 id="title" class="card-title mt-3 text-center">Connexion</h1>
            <form method="post">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div class="container" style="width: 324px;">
                    <div class="row">

                        <div class="form-group input-group">
                            <input type="text" name="username" id="inputUsername" class="form-control "
                                   placeholder="Adresse mail" autofocus>
                        </div>


                        <div class="form-group input-group">
                            <input type="password" name="password" id="inputPassword" class="form-control "
                                   placeholder="Mot de passe">
                        </div>
                    </div>
                    <div class="row">
                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <button class="btn " type="submit" name="mdp" style="color: white">Mot de passe oublié ?</button>


                        <div id="checkboxes" class="control-group">
                            <label class="control control-checkbox">
                                Se rappeler de moi
                                <input type="checkbox"/>
                                <div class="control_indicator"></div>
                            </label>
                        </div>
                    </div>
                    <div id="buttons">
                        <div class="cont">
                            <div class="row">
                                <a href="#inscription" id="but_ins" class="btn col-md">
                                    S'inscrire
                                </a>
                                <button id="log" class="btn col-md" type="submit">
                                    Se connecter
                                </button>
                            </div>
                        </div>
                    </div>
                </div>




            </form>
        </article>


    </div>
    <!--#endregion -->


    <!--#region Inscription User !-->
    <div id="inscription" class="card bg-dark">


        <article id="article_ins" class="card-body mx-auto">
            <h1 id="title" class="card-title mt-3 text-center">Inscription</h1>

            <p id="bienvenue" class="text-light text-center">La futur application pour aider les étudiants à trouver un logement.
                Ywymobilier est sensé regrouper les offres des particuliers pour trouver des locataires (en priotité a des prix abordable pour les étudiants).
                N'attendez plus, inscrivez-vous!</p>

            <form>
                <div class="container">
                    <div class="row">
                        <div class="col-sm">
                            <!--#region Prénom !-->
                            <div id="input" class="form-group input-group">
                                <div class="input-group-prepend">
                                </div>
                                <input name="" class="form-control " placeholder="Prénom" type="text">
                            </div>
                            <!--#endregion !-->

                            <!--#region Nom !-->
                            <div id="input" class="form-group input-group">
                                <div class="input-group-prepend">
                                </div>
                                <input name="" class="form-control " placeholder="Nom" type="text">
                            </div>
                            <!--#endregion !-->

                            <!--#region Pseudo !-->
                            <div id="input" class="form-group input-group">
                                <div class="input-group-prepend">
                                </div>
                                <input name="" class="form-control " placeholder="Pseudo" type="text">
                            </div>
                            <!--#endregion !-->
                        </div>

                        <div id="input" class="col-sm">
                            <!--#region Mail !-->
                            <div class="form-group input-group">
                                <div class="input-group-prepend">
                                </div>
                                <input name="" class="form-control " placeholder="Mail" type="email">
                            </div>
                            <!--#endregion !-->


                            <!--#region MDP !-->
                            <div id="input" class="form-group input-group">
                                <div class="input-group-prepend">
                                </div>
                                <input class="form-control " placeholder="Create password" type="password">
                            </div> <!-- form-group// -->
                            <div id="input" class="form-group input-group">
                                <div class="input-group-prepend">
                                </div>
                                <input class="form-control " placeholder="Repeat password" type="password">
                            </div>

                        </div>
                    </div>
                    <br>
                    <!--#endregion !-->

                    <!--#region checkbox !-->
                    <!--<div class="maxl">
                        Voulez-vous vous abonnez à notre newsletter?</br>
                        <label class="radio inline">
                            <input type="radio" name="news" value="yes" checked>
                            <span>Oui </span>
                        </label>
                        <label class="radio inline">
                            <input type="radio" name="news" value="no">
                            <span>Non </span>
                        </label>
                    </div>
                    <br>

                    <div class="maxl">
                        Voulez-vous activez les notifications ?</br>
                        <label class="radio inline">
