{% extends 'base.html.twig' %}

{% block title %}Gérer les biens{% endblock %}

{% block body %}

<div class="container mt-4">
    <h1>Gérer les offres:</h1>

    {%  for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
        {% endfor %}
        
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for property in properties %}
        <tr>
            <td>{{ property.title }}</td>
            <td><a href="{{ path('admin.property.edit', {id: property.id}) }}" class="btn btn-secondary">Modifier</a>

            <form method="post" action="{{ path('admin.property.delete', {id: property.id}) }}" style="display: inline-block" onsubmit="return confirm('Ce bien sera définitivement supprimé, êtes-vous sûr ?')">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ property.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    
    <div class="text-right">
        <a href="{{ path('admin.property.new')}}" class="btn btn-success">Ajouter un bien</a>
    </div>
</div>
{% endblock %}