{% extends 'base.html.twig' %}

{% block title %}{{ property.title }}{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/exampl1.jpg" alt="Photo de l'appartement à louer"
                                     class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/exampl1.jpg" alt="Photo de l'appartement à louer"
                                     class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/exampl1.jpg" alt="Photo de l'appartement à louer"
                                     class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

                <div class="col-md-4">
                    <h1>{{ property.title }}</h1>
                    <h2>{{ property.rooms }} pièces - {{ property.surface }} m²</h2>
                    <div class="text-primary" style="font-size: 4rem">
                        {{ property.formattedPrice }} €
                    </div>

                    <a class="btn btn-primary" href="#popup1">Contactez le propriétaire</a>


                    <div id="popup1" class="overlay">
                        <div class="popup">
                            <p>Informations du propriétaire du logement <strong>{{ property.title }}</strong> situé
                                à <strong>{{ property.address }}</strong></p>
                            <a class="close" href="#">&times;</a>
                            <div class="content">
                                <table>
                                    <tr>
                                        <th>Nom</th>
                                        <th>{{property.user}}</th>
                                    </tr>
                                    <tr>
                                        <td>E-mail</td>
                                        <td>test@test.com</td>
                                    </tr>
                                    <tr>
                                        <td>Numéro</td>
                                        <td>1234567890</td>
                                    </tr>
                                </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="container mt-4">


        <div class="row">
            <div class="col-md-6">

                <p>
                    {{ property.description }}
                </p>
                <h2>Caractéristiques</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable:</td>
                        <td>{{ property.surface }} m²</td>
                    </tr>
                    <tr>
                        <td>Pièces:</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Etage:</td>
                        <td>{{ property.floor }}</td>
                    </tr>
                </table>
            </div>
            <div class="col md-4">
                <p>Plus de détails sur l'adresse exacte du bien :</p>

                <h2>Lieu</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Ville:</td>
                        <td>{{ property.city }} </td>
                    </tr>
                    <tr>
                        <td>Code postale:</td>
                        <td>{{ property.cp }}</td>
                    </tr>
                    <tr>
                        <td>Adresse:</td>
                        <td>{{ property.address }}</td>
                    </tr>
                </table>
            </div>

        </div>
    </div>
    </div>
    </div>
{% endblock %}