{% extends 'base.html.twig' %}

{% block title %}{{ property.title }}{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/exampl1.jpg" alt="Photo de l'appartement à louer"
                                     class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/exampl1.jpg" alt="Photo de l'appartement à louer"
                                     class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/exampl1.jpg" alt="Photo de l'appartement à louer"
                                     class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                           data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                           data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>

                <div class="col-md-3">
                    <h1>{{ property.title }}</h1>
                    <h2>{{ property.rooms }} pièces - {{ property.surface }} m²</h2>
                    <div class="text" style="font-size: 4rem; color: deepskyblue;">
                        <strong>{{ property.formattedPrice }} €</strong>
                    </div>

                    <a class="btn" id="log" href="#popup1">Contactez le propriétaire</a>
                    <br>
                    <br>
                    <p>Privilégiez les appels plutot que les mails et sms, ça montre votre ambition et votre motivation et en plus c'est plus humain!</p>


                    <div id="popup1" class="overlay">
                        <div class="popup">
                            <p>Informations du propriétaire du logement <strong>{{ property.title }}</strong> situé
                                à <strong>{{ property.address }}</strong></p>
                            <a class="close" href="#">&times;</a>
                            <div class="content">

                                <table class="table table-striped table-dark">
                                    <thead>
                                    <tr>
                                        <th scope="col">Infos du propriétaire</th>
                                        <th scope="col">Prénom</th>
                                        <th scope="col">Nom</th>
                                        <th scope="col">Numéro</th>
                                        <th scope="col">Adresse mail</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <th scope="row">Privilégiez les appels!</th>
                                        <td>{{property.user.firstName}}</td>
                                        <td>{{property.user.lastName}}</td>
                                        <td>{{property.user.num }}</td>
                                        <td>{{property.user.email }}</td>
                                    </tr>
                                    </tbody>
                                </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="mt-4">


        <div class="row">
            <div class="col-md-6">
                {% if property.description == null %}
                    <p>Aucune description n'a été fourni par le propriétaire</p>
                {% endif %}
                <p>

                    {{ property.description }}
                </p>
                <h2>Caractéristiques</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable:</td>
                        <td>{{ property.surface }} m²</td>
                    </tr>
                    <tr>
                        <td>Pièces:</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Etage:</td>
                        <td>{{ property.floor }}</td>
                    </tr>
                </table>
            </div>
            <div class="col md-4">
                <p>Plus de détails sur l'adresse exacte du bien :</p>

                <h2>Lieu</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Ville:</td>
                        <td>{{ property.city }} </td>
                    </tr>
                    <tr>
                        <td>Code postale:</td>
                        <td>{{ property.cp }}</td>
                    </tr>
                    <tr>
                        <td>Adresse:</td>
                        <td>{{ property.address }}</td>
                    </tr>
                </table>
            </div>

        </div>
    </div>
    </div>
    </div>
{% endblock %}